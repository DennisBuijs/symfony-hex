{% extends "base.html.twig" %}

{% block stylesheets %}
<style>
    .actions {
        display: flex;
        margin-bottom: 16px;
    }

    .actions button {
        margin-right: 16px;
    }

    .label {
        font-weight: 600;
    }

    .contact-details {
        display: grid;
        grid-template-columns: 1fr 1fr;
    }
</style>
{% endblock %}

{% block breadcrumbs %}
    <a href="{{ path('contact_list') }}">Contacts</a>
{% endblock %}

{% block header %}
    {{ contact.firstName }} {{ contact.lastName }}
{% endblock %}

{% block body %}
    <div class="actions">
        <form method="get" action="{{ path('contact_edit', { id: contact.id }) }}"><button type="submit">Edit</button></form>
        <form method="get" action="{{ path('contact_delete', { id: contact.id }) }}"><button type="submit">Delete</button></form>
    </div>
    <div class="contact-details">
        <div class="detail">
            <div class="label">Name</div>
            {{ contact.firstName }} {{ contact.lastName }}
        </div>

        <div class="detail">
            <div class="label">Email</div>
            {{ contact.email }}
        </div>
    </div>  
{% endblock %}
